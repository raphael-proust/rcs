# Contributor: gonzo <danielgn at gmx dot de>

pkgname="tabbed"
pkgver=179
pkgrel=1
pkgdesc="The latest hg pull of tabbed, a simple generic tabbed fronted to xembed aware applications"
url="http://tools.suckless.org/tabbed"
license=("MIT/X")
arch=("i686" "x86_64")
depends=("libx11")
makedepends=("git")
conflicts=("tabbed")
provides=("tabbed")

_gitroot="http://git.suckless.org"
_gitrepo="tabbed"

build() {
  cd ${srcdir}

  if [ -d ${_gitrepo} ]; then
    cd ${_gitrepo}
    make clean
    git pull
  else
    git clone ${_gitroot}/${_gitrepo}
    cd ${_gitrepo}
  fi

  msg "Starting build process."
  make || return 1
  make PREFIX=/usr/ DESTDIR=${pkgdir} install || return 1
  install -Dm0644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
}
