#Custom version based on Arch's package

pkgname=dvtm
pkgver=0.14
pkgrel=100
pkgdesc='Dynamic virtual terminal manager.'
arch=('i686' 'x86_64' 'arm')
url='http://www.brain-dump.org/projects/dvtm/'
license=('MIT')
depends=('ncurses')
source=(
"http://www.brain-dump.org/projects/${pkgname}/${pkgname}-${pkgver}.tar.gz"
'config.h'
'config.mk'
)
sha1sums=(
205a2165e70455309f7ed6a6f11b3072fb9b13c3
2bf2b8790532a01e7442cf05c986b0b8d025e02f
15b84b2498a438a459a93491d47ddace0f32b502
)

build() {
	cd "${srcdir}"
	cd "${pkgname}-${pkgver}"

	cp "${srcdir}/config.h" .
	cp "${srcdir}/config.mk" .

	if ls "${startdir}"/patches | grep -q '.*\.diff$'
	then
		for i in "${startdir}"/patches/*\.diff
		do
			msg "patching with $i"
			patch -i $i
		done
	fi

	make clean
	make
}

package() {
	cd "${srcdir}/${pkgname}-${pkgver}"

	make PREFIX=/usr DESTDIR="${pkgdir}" install
	install -Dm0644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
