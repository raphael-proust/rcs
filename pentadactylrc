
set runtimepath=~/.pentadactyl

" vim: set ft=pentadactyl:

" use g' for previously selected tab
map g\' <C-^>
nmap g\' <C-^>
vmap g\' <C-^>

" making the :tabopen! easy
map ! :tabopen! 

" custom searchs (using a DuckDuckGo keyword and bangs)
" see https://duckduckgo.com/bang.html
" To add the ddg keyword, run the following
" bmark -title='test at DuckDuckGo' https://duckduckgo.com/?q=%s -keyword=ddg
map sd tddg 
map s! tddg !
map st tddg !torrentz 
map sw tddg !w 
map sf tddg !wfr 
map sg tddg !github 
map su tddg !urban 
map sa tddg !archwiki 
map si tddg !i 
map sy tddg !v 
map sm tddg !m 
map so tddg !osm 

" mapping h, j, k and l to scroll faster
noremap h 4h
noremap j 4j
noremap k 4k
noremap l 4l

" making ; act as :
noremap ; :
noremap g; ;

" TabGroup thingy
noremap <C-w> <C-S-e>

" avoid accidents
noremap <C-q> <Nop>
noremap ZQ ZZ

"Changing leader
set mapleader=,

" activation
set activate=addons,bookmarks,downloads,extoptions,help,tabopen

" cookies
set cookieaccept=samesite

" default search to DuckDuckGo (through keyword)
set defsearch=ddg
set suggestengines=

" Stop changing focus
set strictfocus='chrome:*':laissez-faire,*:despotic

" The best followhint
set followhints=1

" GUI and all
set guioptions=CMcs
set showstatuslinks=command
set showtabline=always
set noerrorbells
set novisualbell

" command line history
set history=100

" Searching
set hlfind
set incfind
map <F1> :set hlf!<CR>

" Copypasta
noremap -modes=main <C-S-c> <C-v><C-c>
noremap -modes=main <C-S-v> <C-v><C-v>

" Open everything in a new tab
set newtab=all

" Wildmode isn't satisfying, but it's better...
set wildmode=list:longest

" Separate urls by ";"
set urlseparator=;

"duplication via :du
command -nargs 0 -count -bang -description 'Duplicate current tab' du,dup,duplicate :<count>tabduplicate<bang>

" if gvim is not installed
"set editor="xterm -e vim -f"
