mod4 + Escape
	slock

mod4 + shift + Escape
	{slock & sleep 1 && sudo systemctl suspend}

mod4 + Return
	st -e zsh

mod4 + backslash
	st -e dvtm-status

mod4 + bracketleft
	typepass

mod4 + bracketright
	copypass

mod4 + w
	firefox -P socked

mod4 + z
	zathura

XF86MonBrightness{Down,Up}
	sudo bakelite {-,+}10

XF86Audio{Prev,Next}
	mocp {--prev,--next}

XF86AudioPlay
	mocp --toggle-pause

XF86AudioMute
	amixer set Master toggle ; xsetroot -name "$(laptop-status)"

XF86Audio{Lower,Raise}Volume
	amixer set Master playback 3{-,+} ; xsetroot -name "$(laptop-status)"
