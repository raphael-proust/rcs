[color]
  ui = no

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  syntax-theme = none
  minus-style = 0 9
  minus-emph-style = 0 1
  plus-style = 0 10
  plus-emph-style = 0 2
  file-style = 0 6
  file-decoration-style = none
  hunk-header-style = 0 14
  hunk-header-decoration-style = none
  features = line-numbers side-by-side
  line-numbers-minus-style = 0
  line-numbers-plus-style = 0

[diff]
  colorMoved = default

[alias]
  co = commit
  st = status -b --short
  lg = !sh -c 'git log "HEAD~$0..HEAD"'
  review = !sh -c 'nvim -c \"tabdo Gdiffsplit! $1\" -p $(git diff --name-only $*)' _
[push]
  default = simple

[status]
  showUntrackedFiles = no
[transfer]
  fsckObjects = true
[gpg]
  program = gpg2

[merge]
  tool = vimdiff
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	ff = only
