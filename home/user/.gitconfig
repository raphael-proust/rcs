[color]
  ui = no

[core]
  pager = cat

[alias]
  co = commit
  st = status -b --short
  ck = checkout
  br = branch
  lg = !sh -c 'git log "HEAD~$0..HEAD"'
  root = !pwd
  psh = push --quiet
  pll = pull --quiet
  cln = clone --quiet
  review = !sh -c 'nvim -c \"tabdo Gdiffsplit $1\" -p $(git diff --name-only $1)' _
[push]
  default = simple

[status]
  showUntrackedFiles = no
[transfer]
  fsckObjects = true
[gpg]
  program = gpg2

[merge]
  tool = vimdiff
[mergetool]
  prompt = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[pull]
	ff = only
