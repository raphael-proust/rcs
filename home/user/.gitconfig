[color]
  ui = no

[core]
  pager = cat

[alias]
  co = commit
  st = status -b --short
  lg = !sh -c 'git log "HEAD~$0..HEAD"'
  root = !pwd
  psh = push --quiet
  pll = pull --quiet
  cln = clone --quiet
  review = !sh -c 'nvim -c \"tabdo Gdiff $1\" -p $(git diff --name-only $1)' _
[push]
  default = simple

[status]
  showUntrackedFiles = no
[transfer]
  fsckObjects = true
[gpg]
  program = gpg2
