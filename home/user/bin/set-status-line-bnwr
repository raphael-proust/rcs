#!/bin/dash

STATUSLINE="$(status-line-bnwr)"

WMNAME="$(wmname 2>/dev/null)"
if [ "$?" -eq "0" ]
then
  case "$WMNAME" in
    dwm)
      xsetroot -name "$STATUSLINE"
      ;;
    wmii)
      wmiir write /rbar/status "$STATUSLINE"
      ;;
  esac
fi

for i in $(ls /tmp |grep "dvtm-status.[[:digit:]]\+")
do
  echo "$STATUSLINE" > /tmp/$i
done

