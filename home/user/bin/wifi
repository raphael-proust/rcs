#!/bin/sh

case "$1" in
  d)
    sudo netcfg down $(sudo netcfg current)
    ;;

  off)
    sudo netcfg down $(sudo netcfg current)
    sudo rfkill block wifi
    ;;

  r)
    sudo netcfg reconnect $(sudo netcfg current)
    ;;

  *)
    sudo rfkill unblock wifi
    sudo netcfg up $*
    ;;
esac
exit 0
