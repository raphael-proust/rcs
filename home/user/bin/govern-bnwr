#!/bin/dash

case "$1" in
  (ondemand)
    sudo cpupower frequency-set -r -g ondemand
    ;;
  (powersave)
    sudo cpupower frequency-set -r -g powersave
    ;;
  (performance)
    sudo cpupower frequency-set -r -g performance
    ;;
  (*)
    echo "usage: $0 {ondemand|powersave|performance}"
esac

set-status-line-bnwr
