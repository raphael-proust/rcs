#!/bin/dash

# Andy Spencer 2009-2011 - Public domain
# Modified by RaphaÃ«l Proust - 2012

uri="http://vpaste.net/"
if [ -f "$1" ]; then
  out=$(curl -s -F "text=<$1" "$uri?$2")
else
  out=$(curl -s -F 'text=<-' "$uri?$1")
fi
printf %s "$out"
if [ -x "`which xclip 2>/dev/null`" -a "$DISPLAY" ]; then
  printf %s\\n "$out" | xclip -i -selection primary
  printf %s\\n "$out" | xclip -i -selection clipboard
fi
