#!/usr/lib/plan9/bin/9 /usr/lib/plan9/bin/rc

TASKPIPESDIR=$home/dtach-pipes
if (! test -d $TASKPIPESDIR) mkdir $TASKPIPESDIR

switch ($#*) {
case 0
	ls -p $TASKPIPESDIR
	TASKPIPE=`{read}
	switch($TASKPIPE) {
	case ''
		exit 1
	case *
		exec dtach -A $TASKPIPESDIR/$TASKPIPE $SHELL
	}
case 1
	switch $*(1) {
	case -l
		echo `{ls -p $TASKPIPESDIR}
	case *
		exec dtach -A $TASKPIPESDIR/$*(1) $SHELL
	}
case 2
	switch $*(1) {
	case -e
		test -e $TASKPIPESDIR/$2
	case -a
		exec dtach -a $TASKPIPESDIR/$2
#	The following doesn't work because plan9's ps is different from posix's
#	case -p
#		if (test -e $TASKPIPESDIR/$2) {
#			DTACHPID=`{lsof -F 'p' $TASKPIPESDIR/$2 | cut -b '2-'}
#			TASKPID=`{ps -o pid= --ppid $DTACHPID}
#			echo $TASKPID
#		}
#		if not exit 2
#	case -k
#		if (test -e $TASKPIPESDIR/$2) {
#			DTACHPID=`{lsof -F 'p' $TASKPIPESDIR/$2 | cut -b '2-'}
#			TASKPID=`{ps -o pid= --ppid $DTACHPID}
#			slay $TASKPID | rc
#			rm -f $TASKPIPESDIR/$2
#		}
#		if not exit 2
	case *
		exec dtach -A $TASKPIPESDIR/$*(1) $*(2)
	}
case *
	switch $*(1) {
	case -a
		exit 1
	case -[cnA]
		DASHARG=$*(1)
		PIPENAME=$*(2)
		shift 2
		exec dtach $DASHARG $TASKPIPESDIR/$PIPENAME $*
	case *
		PIPENAME=$1
		shift 1
		exec dtach -A $TASKPIPESDIR/$PIPENAME $*
	}
}


