
set runtimepath=~/.pentadactyl

" vim: set ft=pentadactyl:

" TODO:
" use https://github.com/maksimr/octopus
" use https://github.com/maksimr/spliter-penta
" use http://dactyl.sourceforge.net/pentadactyl/plugins#fix-focus-plugin
" use http://dactyl.sourceforge.net/pentadactyl/plugins#flashblock-plugin
" use http://dactyl.sourceforge.net/pentadactyl/plugins#tab-options-plugin


" use g' for previously selected tab
map g\' <C-^>
nmap g\' <C-^>
vmap g\' <C-^>

" making the :tabopen! easy
map ! :tabopen! 

"Searching: use DuckDuckGo
"bmark -title='DuckDuckGo' https://duckduckgo.com/?kf=b&kk=-1&kl=wt-wt&kp=-1&kv=1&kw=m&q=%s -keyword=ddg

"ddg is the default
set defsearch=ddg
set suggestengines=

" custom searches (using bangs: https://duckduckgo.com/bang.html)
map sd tddg 
map sb tddg !
map st tddg !torrentz 
map sw tddg !w 
map sf tddg !wfr 
map sg tddg !github 
map su tddg !urban 
map sa tddg !archwiki 
map si tddg !i 
map sy tddg !v 
map sm tddg !m 
map so tddg !osm 

" mapping h, j, k and l to scroll faster
map -builtin h 6h
map -builtin j 6j
map -builtin k 6k
map -builtin l 6l

" TabGroup thingy
map -builtin <C-w> <C-S-e>

" avoid accidents
map -builtin <C-q> <Nop>
map -builtin ZQ ZZ
map -builtin <MiddleMouse> P

map -builtin <C-h> H
map -builtin <C-l> L

" activation
set activate=addons,bookmarks,downloads,extoptions,help,tabopen


" Stop changing focus
set strictfocus='chrome:*':laissez-faire,*:despotic

" The best followhint
set followhints=1

" GUI and all
set guioptions=CMs
"set showstatuslinks=command
set showtabline=always
set maxitems=7
set noerrorbells
set novisualbell

" command line history
set history=100
map -builtin -modes=Ex,Find <C-k> <Up>
map -builtin -modes=Ex,Find <C-j> <Down>
map -builtin -modes=Ex,Find <C-c> <Esc>

" Searching
set hlfind
set incfind
map <F1> :set hlf!<CR>
set findcase=ignore

" Copypasta
map -builtin -modes=main <C-S-c> <C-v><C-c>
map -builtin -modes=main <C-S-v> <C-v><C-v>

" Open everything in a new tab
set newtab=all

" Completion
set autocomplete=
set wildmode=list:longest

" Separate urls by ";"
set urlseparator=;

"duplication via :du
command -nargs 0 -count -bang -description 'Duplicate current tab' du,dup,duplicate :keepalt <count>tabduplicate<bang>

" if gvim is not installed
set editor='9acme -c 1 <file>'
